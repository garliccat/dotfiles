""" config file for VIM
""" put it to ~/

" wrap long lines
set wrap

" auto indents for new lines
set ai

" convert tab to spaces, 4 in this case
set tabstop=4
set shiftwidth=4
set smarttab

" highlight search results
set showmatch
set hlsearch
set incsearch
set ignorecase

" display line numbers
set number
set relativenumber

" highlight syntax
syntax on
